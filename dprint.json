{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "includes": ["**/*.{md,json,yml,yaml}"],
  "excludes": ["**/node_modules"],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/prettier-0.46.1.json@dc17a34d93e0a3a38fd66bc349132ee4f4d90712e2583a92a86ad9e661333e52"
  ],
  "markdown": {
    "lineWidth": 100
  },
  "json": {
    "indentWidth": 2
  },
  "prettier": {
    "associations": ["**/*.{yml,yaml}"],
    "yml.tabWidth": 2,
    "yaml.tabWidth": 2
  }
}
